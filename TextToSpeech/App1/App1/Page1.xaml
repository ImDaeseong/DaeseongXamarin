<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:renderers ="clr-namespace:App1.Renderers"
             x:Class="App1.Page1">
    <ContentPage.Content>

        <StackLayout Margin="5,5,5,5">
           
            <renderers:CustomFrame VerticalOptions="FillAndExpand" HorizontalOptions="FillAndExpand">

                <Grid VerticalOptions="Center" HorizontalOptions="Center">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="9*" />
                        <RowDefinition Height="2*" />
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>

                    <renderers:CustomEditor Grid.Row="0" WidthRequest ="300" x:Name="Input" VerticalOptions="FillAndExpand" TextColor="Black" FontSize="17" HorizontalOptions="FillAndExpand" />
                    <Button Text="말하기" Grid.Row="1" WidthRequest="50" HeightRequest="40" Clicked="Button_Clicked" />

                </Grid>
                
            </renderers:CustomFrame>
            
        </StackLayout>
        
    </ContentPage.Content>
</ContentPage>