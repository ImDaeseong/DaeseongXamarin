<?xml version="1.0" encoding="UTF-8"?>
<ContentView xmlns="http://xamarin.com/schemas/2014/forms" 
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="App1.AniView3">
  <ContentView.Content>

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="2*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <Image x:Name="aniImg" 
               Source="ani2.png" WidthRequest="100" HeightRequest="100" 
			   HorizontalOptions="Start" VerticalOptions="CenterAndExpand" Grid.Row="0" Grid.Column="0"/>

            <StackLayout Grid.Row="1" Grid.Column="0" Orientation="Horizontal">
                <Button CommandParameter="100" Clicked="AniX_Clicked" Text="Flip X 100"/>
                <Button CommandParameter="-100" Clicked="AniX_Clicked" Text="Flip X -100"/>
                <Button CommandParameter="100" Clicked="AniY_Clicked" Text="Flip Y 100"/>
                <Button CommandParameter="-100" Clicked="AniY_Clicked" Text="Flip Y -100"/>
            </StackLayout>

        </Grid>
      
    </ContentView.Content>
</ContentView>