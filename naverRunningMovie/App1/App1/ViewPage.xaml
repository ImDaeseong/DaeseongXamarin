<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="App1.ViewPage"
             Title="메인으로">
    <ContentPage.Content>
        <StackLayout Margin="5">            
            <Image x:Name="imgImage" VerticalOptions="CenterAndExpand"  HeightRequest="300" WidthRequest="300">
                <Image.GestureRecognizers>
                    <TapGestureRecognizer Tapped="TapGestureRecognizer_Tapped" />
                </Image.GestureRecognizers>
            </Image>
            <Label x:Name="lbltitle" TextColor="Brown" HorizontalOptions="CenterAndExpand" Text="" FontSize="20"/>            
        </StackLayout>
    </ContentPage.Content>
</ContentPage>