<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:Renderes = "clr-namespace:App1.Renderers"
              xmlns:local = "clr-namespace:App1"
             x:Class="App1.Page4">
    <ContentPage.Content>


        <Grid RowSpacing="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <Renderes:ImageCarousel x:Name="carouselImg" Grid.RowSpan="2" Images="{Binding Images}"  />
            <StackLayout Grid.Row="0" BackgroundColor="#80000000" Padding="0">
                <local:SettingImageButton x:Name="EnterClose" Text="이용 가이드"   />
            </StackLayout>
        </Grid>

    </ContentPage.Content>
</ContentPage>