<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:LampVibrate"
             x:Class="LampVibrate.MainPage"
             BackgroundColor="Transparent">

    <ContentPage.Content>
        <StackLayout BackgroundColor="Transparent">
            <Button x:Name="LampOn" Text="Lamp On" Clicked="LampOn_Clicked"/>
            <Button x:Name="LampOff" Text="Lamp Off" Clicked="LampOff_Clicked"/>
            <Button x:Name="LampTest" Text="LampTest" Clicked="LampTest_Clicked"/>
        </StackLayout>
    </ContentPage.Content>

</ContentPage>