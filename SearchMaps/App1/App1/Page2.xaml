<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="App1.Page2">

    <ContentPage.Padding>
        <OnPlatform x:TypeArguments="Thickness" iOS="0, 20, 0, 0" />
    </ContentPage.Padding>

    <ContentPage.Content>

        <StackLayout >
            <Label x:Name="MyLocation" Text="My Location" VerticalOptions="Center" HorizontalOptions="Center" />
            <Label x:Name="MyGeolocationAvailable" Text="My GeolocationAvailable" VerticalOptions="Center" HorizontalOptions="Center" />
            <Label x:Name="MyGeolocationEnabled" Text="My GeolocationEnabled" VerticalOptions="Center" HorizontalOptions="Center" />
        </StackLayout>

    </ContentPage.Content>
    
   
</ContentPage>