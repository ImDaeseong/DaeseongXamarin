<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="App1.Splash"
             BackgroundColor="Transparent">
    <ContentPage.Content>
        <StackLayout VerticalOptions="CenterAndExpand" HorizontalOptions="CenterAndExpand" >
            <Image x:Name="splash" Aspect="AspectFit" HorizontalOptions="Center" />
            <ActivityIndicator Color="Pink" IsRunning="True" />
            <Label Text="Loading..." TextColor="PowderBlue" HorizontalTextAlignment="Center" FontSize="16"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>